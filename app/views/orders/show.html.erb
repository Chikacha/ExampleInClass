<p id="notice"><%= notice %></p>
<%= render 'shared/title', title: 'Show Order'%>
<table class="table">
  <tr>
    <td>
    <strong>Name:</strong>
    <%= @order.name %>
    </td>
  </tr>
  <tr>
    <td>
    <strong>Phone:</strong>
    <%= @order.phone %>
    </td>
  </tr>
  <tr>
    <td>
    <strong>Description:</strong>
    <%= @order.description %>
    </td>
  </tr>
</table>

<h4>留言區:</h4>

<% @comments.each do |comment| %>
  <div class="col-md-6 well">
      <p>
        <%= comment.comment %>
      </p>
      <br>
      <small>留言者： </small><%= "#{comment.user.name}" %>
    </div>
<% end %>

<h4>請留言:</h4>
  <%= form_for [@order, @comment] do |f| %>
    <div class="row">
      <%= f.text_area :comment, rows: 3, class: 'col-md-4' %>
      <div class="col-md-2">
        <%= f.submit '留言', class: 'btn btn-primary' %>
      </div>
    </div>
    <br>
  <% end %>

<%= link_to 'Edit', edit_order_path(@order) %> 
<%= link_to 'Back', orders_path %>
